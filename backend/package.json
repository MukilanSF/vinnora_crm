{
  "name": "vinnora-crm-backend",
  "version": "1.0.0",
  "description": "Enterprise-level CRM Backend with Supabase & WebSocket Integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "ts-node src/database/migrations/run-migrations.ts",
    "seed": "ts-node src/database/seeds/seed-data.ts",
    "setup": "node setup.js",
    "fix-schema": "node fix-schema.js",
    "check-env": "node -e \"console.log('Environment check:', process.env.SUPABASE_URL ? '✅ SUPABASE_URL set' : '❌ SUPABASE_URL missing', process.env.SUPABASE_SERVICE_KEY ? '✅ SUPABASE_SERVICE_KEY set' : '❌ SUPABASE_SERVICE_KEY missing', process.env.JWT_SECRET ? '✅ JWT_SECRET set' : '❌ JWT_SECRET missing')\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "crm",
    "backend",
    "enterprise",
    "supabase",
    "websocket"
  ],
  "author": "Vinnora Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "rate-limiter-flexible": "^5.0.3",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.10",
    "@types/nodemailer": "^6.4.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
